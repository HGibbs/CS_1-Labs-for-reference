#include <iostream>
#include <cmath>
#include <cstdlib>

using std::cout; using std::cin; using std::endl; using namespace std;

int main(){
	int ch;
	int v1;
	double v2;
	double v3;

	cout << "1. Absolute Value " << endl;
	cout << "2. Square Root " << endl;
	cout << "3. Ceiling " << endl;
	cout << "4. Power " << endl;

	do
	{
		cout << "Please Select which Mathematical Operation you would like to preform. " << endl;
		cin >> ch;


		switch (ch){

		case 1:
			cout << "Enter Value ";
			cin >> v1;
			cout << abs(v1) << " ";
			break;

		case 2:
			cout << "Enter Value ";
			cin >> v2;
			cout << sqrt(v2) << " ";
			break;

		case 3:
			cout << "Enter Value ";
			cin >> v2;
			cout << ceil(v2) << " ";
			break;

		case 4:
			cout << "Enter Value ";
			cin >> v2;
			cout << "Enter Value ";
			cin >> v3;
			cout << pow(v2, v3) << " ";
			break;
		} 
	} while (ch > 0 && ch <5);
}
